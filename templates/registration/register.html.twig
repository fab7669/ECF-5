{% extends 'base.html.twig' %}

{% block title %}Inscription - Gestion Crèche{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-justify text-center">
                        <h1 class="h3 mb-3 text-center">Inscription</h1>

                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': 'd-flex flex-column align-items-center'}}) }}
                            <div class="mb-3 w-75">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="mb-3 w-75">
                                {{ form_row(registrationForm.password) }}
                            </div>
                            <button type="submit" class="btn btn-primary w-50 mx-auto d-block">
                                S'inscrire
                            </button>
                        {{ form_end(registrationForm) }}
                        
                        <div class="mt-3 text-center">
                            <a href="{{ path('app_login') }}">Déjà inscrit ? Connectez-vous</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}